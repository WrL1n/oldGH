<div class="container"><h2><%= t('sessions.log_in') %></h2></div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label t('sessions.email') %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label t('sessions.password') %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label t('sessions.remember_me') %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit t('sessions.button') %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
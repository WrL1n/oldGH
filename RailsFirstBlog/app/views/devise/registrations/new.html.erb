<div class="container"><h2><%= t('registrations.sign_up') %></h2></div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label t('registrations.email') %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label t('registrations.username') %><br />
      <%= f.text_field :username %>
    </div>

    <div class="field">
      <%= f.label t('registrations.password') %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %><%= t('registrations.chars_min') %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label t('registrations.password_conf') %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit t('registrations.button') %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
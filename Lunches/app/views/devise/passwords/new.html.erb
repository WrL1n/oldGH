<div class="container">
  <h2>Forgot your password?</h2>

  <%= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f| %>
    <%= devise_error_messages! %>
    <div class="row">
      <div class="col-md-4">
        <div class="field">
          <%= f.input :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-success btn-lg btn-block" %>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
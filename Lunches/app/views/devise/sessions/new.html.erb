<div class="container"><h2><%= t('session.sign_in') %></h2></div>

<div class="container">
  <%= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>

    <div class="row">
      <div class="col-md-4">
        <%= f.input :email, label: t('session.email'), placeholder: 'user@domain.com', autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.input :password, hint: false, error_html: { id: 'password_error'}, label: t('session.password'), autocomplete: "off" %>
      </div>
    </div>

  <% if devise_mapping.rememberable? -%>
    <div class="row">
      <div class="col-md-4">
        <%= f.input :remember_me, as: :boolean %>
      </div>
    </div>
  <% end -%>
    <div class="row">
      <div class="col-md-4">
        <div class="actions">
          <%= f.button :submit, t('session.button'), class: "btn btn-success btn-lg btn-block" %>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
<p>
	<h3><%= @post_id.post_topic %></h3>
	<br>
	<%= @post_id.post_text %>
	<br>	
	<span style = "font-size: 75%; color: #999" >		
		Author: <%= @post_id.post_author %>
		<br>
		Added at: <%= @post_id.created_at %>
	</span>
	<hr>		
</p>

<% @all_comments.each do |comment| %>
		<%= comment.comment_text %>
		<br>
		<span style = "font-size: 75%; color: #999" >		
			<%= comment.comment_author %>
			<br>
			<%= comment.created_at %>
		</span>
		<hr>
<% end %>

<p>
	<form action="/post/<%= @post_id.id %>" method="POST">
	    <textarea name="comment[comment_text]" class="form-control" rows="6" placeholder="Type comment text here" required="true"></textarea>
	    <br>
	    <input type="text" name="comment[comment_author]" class="form-control" placeholder="Type you name here" required="true">
	    <br>
	    <button type="submit" class="btn btn-success">Add comment</button>
	</form>
</p>
<h2>Latest posts:</h2>
<br/>

<% @results.each do |post| %>
	
	<p>
		<%= post['content'] %>
		<br />
		<br />
		<span style = "font-size: 75%; color: #999" > 
		Author: <%= post['author'] %> <br>
		Added at:<%= post['created_date'] %>
		</span>
		<br />
		<br />
		<a href = "/details/<%= post['id'] %>"> Comments </a>
	</p>
	<hr>
<% end %>